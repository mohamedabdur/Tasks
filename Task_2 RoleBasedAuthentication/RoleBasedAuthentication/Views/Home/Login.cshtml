 @model User
 <head>
  	<title>Login 04</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="../css/style.css">

	</head>
	<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
					<div class="login-wrap p-4 p-md-5">
			      	    <div class="d-flex">
			      		    <div class="w-100">
			      			    <h3 style="margin-left: 130px; font-family:Times new roman; color:rgb(194, 88, 62); font-weight:bold;" class="mb-4">LOG IN</h3>
			      		    </div>
			      	    </div>
						<form method="post" class="signin-form">
			      		    <div class="form-group mb-3">
			      			<label class="label" for="name" style="color:red">Username</label>
			      			<input type="text" class="form-control" style="width: 25rem; background-color:rgb(207, 122, 122)" asp-for="Username" required>
			      		</div>
		            <div class="form-group mb-3">
		            	<label class="label" for="password" style="color:red;">Password</label>
		              <input type="password" class="form-control" style="width: 25rem; background-color:rgb(207, 122, 122)" asp-for="Password" asp-area="Password" required>
		            </div>
					<div class="form-group mb-3">
		            	<label style="color:red; margin-left:110px">@ViewBag.message</label>
		            </div>
		            <div class="form-group">
		            	<button type="submit" class="form-control btn btn-primary rounded submit px-3" style="background-color: rgb(0, 0, 0);">Sign In</button>
		            </div>
		          </form>
		        </div>
		      </div>
				</div>
			</div>
		</div>
	</section>

